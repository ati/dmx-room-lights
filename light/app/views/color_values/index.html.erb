<h1>Listing color_values</h1>

<table>
  <tr>
    <th>Color group</th>
    <th>Distance</th>
    <th>Value</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @color_values.each do |color_value| %>
  <tr>
    <td><%= color_value.color_group.displayname %></td>
    <td><%= color_value.distance %></td>
    <td><%= color_value.v %></td>
    <td><%= link_to 'Show', color_value %></td>
    <td><%= link_to 'Edit', edit_color_value_path(color_value) %></td>
    <td><%= link_to 'Destroy', color_value, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

